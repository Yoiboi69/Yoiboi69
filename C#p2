using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace ConsoleApplication1
{
    class Program
    {
        static void Main(string[] args)
        {
            int x;
            double d1 = 54.67 , d2;
            object x1 = "21";
            x = Convert.ToInt16(x1); // unboxing
            Console.WriteLine(x);
            x1 = d1; // boxing, implicit conversion
            d2 = Convert.ToDouble(x1); // unboxing, implicit conversion
            Console.WriteLine(x1);
            Console.WriteLine(d2);
            Console.ReadKey();



        }
    }
}
